<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/tube"
    tools:context="com.example.hyojin.c_216230088_kimhyojin.MainActivity"
    tools:layout_editor_absoluteX="0dp"
    tools:layout_editor_absoluteY="81dp">

    <LinearLayout
        android:layout_width="361dp"
        android:layout_height="68dp"
        android:orientation="horizontal"
        android:scrollX="@android:dimen/dialog_min_width_major"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        app:layout_constraintHorizontal_bias="0.571"
        app:layout_constraintVertical_bias="1.0">

        <ImageButton
            android:id="@+id/call"
            android:layout_width="71dp"
            android:layout_height="59dp"
            android:layout_alignParentBottom="true"
            android:layout_alignStart="@+id/textView"
            android:layout_weight="1"
            android:elevation="0dp"
            android:scaleType="fitXY"
            app:srcCompat="@android:drawable/sym_action_call"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="445dp" />

        <ImageButton
            android:id="@+id/kakao"
            android:layout_width="70dp"
            android:layout_height="60dp"
            android:layout_alignTop="@+id/call"
            android:layout_toEndOf="@+id/call"
            android:layout_weight="1"
            android:onClick="onClick1"
            android:scaleType="fitXY"
            app:srcCompat="@drawable/kakao"
            tools:layout_editor_absoluteX="87dp"
            tools:layout_editor_absoluteY="445dp" />

        <ImageButton
            android:id="@+id/menu"
            android:layout_width="77dp"
            android:layout_height="68dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_weight="1"
            app:srcCompat="@android:drawable/ic_dialog_dialer"
            tools:layout_editor_absoluteX="154dp"
            tools:layout_editor_absoluteY="436dp" />

        <ImageButton
            android:id="@+id/insta"
            android:layout_width="71dp"
            android:layout_height="59dp"
            android:layout_alignParentBottom="true"
            android:layout_toEndOf="@+id/facebook"
            android:layout_weight="1"
            android:onClick="onClick"
            android:scaleType="fitXY"
            app:srcCompat="@drawable/insta"
            tools:layout_editor_absoluteX="230dp"
            tools:layout_editor_absoluteY="445dp" />

        <ImageButton
            android:id="@+id/facebook"
            android:layout_width="72dp"
            android:layout_height="58dp"
            android:layout_alignTop="@+id/kakao"
            android:layout_toEndOf="@+id/menu"
            android:layout_weight="1"
            android:scaleType="fitXY"
            app:srcCompat="@drawable/facebook"
            tools:layout_editor_absoluteX="301dp"
            tools:layout_editor_absoluteY="446dp" />

    </LinearLayout>

    <TextView
        android:id="@+id/textView"
        android:layout_width="167dp"
        android:layout_height="70dp"
        android:layout_above="@+id/checkBox2"
        android:layout_alignEnd="@+id/checkBox4"
        android:layout_weight="0.06"
        android:text="  #Check list"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:textSize="25sp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        app:layout_constraintVertical_bias="0.244"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_bias="0.004"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp" />

    <CheckBox
        android:id="@+id/checkBox"
        android:layout_width="167dp"
        android:layout_height="63dp"
        android:layout_alignBottom="@+id/checkBox2"
        android:layout_alignStart="@+id/textView"
        android:layout_weight="0.19"
        android:text="Homework"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintVertical_bias="0.351"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.039" />

    <CheckBox
        android:id="@+id/checkBox3"
        android:layout_width="169dp"
        android:layout_height="56dp"
        android:layout_alignEnd="@+id/checkBox2"
        android:layout_below="@+id/checkBox2"
        android:layout_weight="0.18"
        android:text="Shopping"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="274dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        app:layout_constraintVertical_bias="0.0"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.044" />

    <CheckBox
        android:id="@+id/checkBox2"
        android:layout_width="168dp"
        android:layout_height="60dp"
        android:layout_alignBottom="@+id/textView2"
        android:layout_toEndOf="@+id/textView2"
        android:layout_weight="0.15"
        android:text="Go to school"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.044" />

    <CheckBox
        android:id="@+id/checkBox4"
        android:layout_width="172dp"
        android:layout_height="54dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/checkBox3"
        android:layout_weight="0.16"
        android:text="Part-time job"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintVertical_bias="0.766"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.045" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="179dp"
        android:layout_height="26dp"
        android:layout_weight="0.46"
        android:text="Midterm exam"
        android:textAppearance="@style/TextAppearance.AppCompat.Button"
        android:textSize="21sp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        app:layout_constraintHorizontal_bias="0.952"
        app:layout_constraintVertical_bias="0.29" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="104dp"
        android:layout_height="69dp"
        android:layout_alignTop="@+id/checkBox2"
        android:text="D-5"
        android:textAppearance="@style/TextAppearance.AppCompat.Display2"
        android:textColor="@android:color/holo_red_dark"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_bias="0.885"
        app:layout_constraintVertical_bias="0.417" />

    <SearchView
        android:id="@+id/searchView"
        android:layout_width="338dp"
        android:layout_height="40dp"
        android:layout_centerHorizontal="true"
        android:layout_weight="0.06"
        android:background="@android:color/holo_green_light"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        app:layout_constraintVertical_bias="0.047"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        tools:layout_editor_absoluteY="20dp" />

    //한쪽 방향으로만 뷰 배치할 수 있는 레이아웃

</android.support.constraint.ConstraintLayout>
