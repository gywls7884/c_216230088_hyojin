<?xml version="1.0" encoding="utf-8"?>


<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/tube"
    tools:context="com.example.hyojin.c_216230088_kimhyojin.MainActivity"
    tools:layout_editor_absoluteX="0dp"
    tools:layout_editor_absoluteY="81dp">

    <LinearLayout
        android:layout_width="361dp"
        android:layout_height="68dp"
        android:orientation="horizontal"
        android:scrollX="@android:dimen/dialog_min_width_major"
        tools:layout_editor_absoluteX="12dp"
        tools:layout_editor_absoluteY="444dp">

        <ImageButton
            android:id="@+id/call"
            android:layout_width="71dp"
            android:layout_height="59dp"
            android:layout_alignParentBottom="true"
            android:layout_alignStart="@+id/textView"
            android:layout_weight="1"
            android:elevation="0dp"
            android:scaleType="fitXY"
            app:srcCompat="@android:drawable/sym_action_call"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="445dp" />

        <ImageButton
            android:id="@+id/kakao"
            android:layout_width="70dp"
            android:layout_height="60dp"
            android:layout_alignTop="@+id/call"
            android:layout_toEndOf="@+id/call"
            android:layout_weight="1"
            android:scaleType="fitXY"
            android:onClick="onClick1"
            app:srcCompat="@drawable/kakao"
            tools:layout_editor_absoluteX="87dp"
            tools:layout_editor_absoluteY="445dp" />

        <ImageButton
            android:id="@+id/menu"
            android:layout_width="77dp"
            android:layout_height="68dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_weight="1"
            app:srcCompat="@android:drawable/ic_dialog_dialer"
            tools:layout_editor_absoluteX="154dp"
            tools:layout_editor_absoluteY="436dp" />

        <ImageButton
            android:id="@+id/insta"
            android:layout_width="71dp"
            android:layout_height="59dp"
            android:layout_alignParentBottom="true"
            android:layout_toEndOf="@+id/facebook"
            android:layout_weight="1"
            android:onClick="onClick"
            android:scaleType="fitXY"
            app:srcCompat="@drawable/insta"
            tools:layout_editor_absoluteX="230dp"
            tools:layout_editor_absoluteY="445dp" />

        <ImageButton
            android:id="@+id/facebook"
            android:layout_width="72dp"
            android:layout_height="58dp"
            android:layout_alignTop="@+id/kakao"
            android:layout_toEndOf="@+id/menu"
            android:layout_weight="1"
            android:scaleType="fitXY"
            app:srcCompat="@drawable/facebook"
            tools:layout_editor_absoluteX="301dp"
            tools:layout_editor_absoluteY="446dp" />

    </LinearLayout>

    <TextView
        android:id="@+id/textView"
        android:layout_width="167dp"
        android:layout_height="70dp"
        android:layout_above="@+id/checkBox2"
        android:layout_alignEnd="@+id/checkBox4"
        android:layout_weight="0.06"
        android:text="  #Check list"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:textSize="25sp"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="103dp" />

    <CheckBox
        android:id="@+id/checkBox"
        android:layout_width="167dp"
        android:layout_height="63dp"
        android:layout_alignBottom="@+id/checkBox2"
        android:layout_alignStart="@+id/textView"
        android:layout_weight="0.19"
        android:text="Homework"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="151dp" />

    <CheckBox
        android:id="@+id/checkBox3"
        android:layout_width="169dp"
        android:layout_height="56dp"
        android:layout_alignEnd="@+id/checkBox2"
        android:layout_below="@+id/checkBox2"
        android:layout_weight="0.18"
        android:text="Shopping"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="274dp" />

    <CheckBox
        android:id="@+id/checkBox2"
        android:layout_width="168dp"
        android:layout_height="60dp"
        android:layout_alignBottom="@+id/textView2"
        android:layout_toEndOf="@+id/textView2"
        android:layout_weight="0.15"
        android:text="Go to school"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="214dp" />

    <CheckBox
        android:id="@+id/checkBox4"
        android:layout_width="172dp"
        android:layout_height="54dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/checkBox3"
        android:layout_weight="0.16"
        android:text="Part-time job"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="330dp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.46"
        android:text="Midterm exam"
        android:textAppearance="@style/TextAppearance.AppCompat.Button"
        android:textSize="21sp"
        tools:layout_editor_absoluteX="211dp"
        tools:layout_editor_absoluteY="135dp" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="104dp"
        android:layout_height="69dp"
        android:layout_alignTop="@+id/checkBox2"
        android:text="D-5"
        android:textAppearance="@style/TextAppearance.AppCompat.Display2"
        android:textColor="@android:color/holo_red_dark"
        tools:layout_editor_absoluteX="238dp"
        tools:layout_editor_absoluteY="173dp" />

    <SearchView
        android:id="@+id/searchView"
        android:layout_width="362dp"
        android:layout_height="48dp"
        android:layout_centerHorizontal="true"
        android:layout_weight="0.06"
        android:background="@android:color/holo_green_light"
        tools:layout_editor_absoluteX="11dp"
        tools:layout_editor_absoluteY="16dp" />

    //한쪽 방향으로만 뷰 배치할 수 있는 레이아웃

</android.support.constraint.ConstraintLayout>
